@page "/calculator-partial"

<h3>Simple Calculator (Code-behind)</h3>

<div class="mb-3">
    <label>Number 1:</label>
    <input type="number" @bind="Number1" class="form-control" />
</div>

<div class="mb-3">
    <label>Number 2:</label>
    <input type="number" @bind="Number2" class="form-control" />
</div>

<div class="mb-3">
    <button class="btn btn-primary me-2" @onclick="Add">Add</button>
    <button class="btn btn-primary me-2" @onclick="Subtract">Subtract</button>
    <button class="btn btn-primary me-2" @onclick="Multiply">Multiply</button>
    <button class="btn btn-primary me-2" @onclick="Divide">Divide</button>
</div>

<div class="alert alert-info">
    Result: @Result
</div>
