@using Workshop8.Models

<div class="item-card card shadow-sm mb-3">
    <div class="card-body">
        <h5 class="card-title">@Name</h5>
        <p class="card-text"><strong>Ingredients:</strong> @Ingredients</p>
        <p class="card-text"><strong>Price:</strong> $@Price</p>
    </div>
</div>

@code {
    [Parameter] public string Name { get; set; } = string.Empty;
    [Parameter] public string Ingredients { get; set; } = string.Empty;
    [Parameter] public double Price { get; set; }
}
